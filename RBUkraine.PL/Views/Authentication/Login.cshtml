 <div class="login-block">
     
     <form asp-action="Login" asp-route-returnUrl="@ViewBag.ReturnUrl">
         <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         <div class="section">
             <p class="in">
                 @localizer["Sign-in"]
             </p>
             <hr class="hr">
             <p class="email-text">
                 @localizer["e-mail"]
             </p>
             <input asp-for="Email" type="email" name="email" class="email" required>
             <p class="password-text">
                 @localizer["Password"]
             </p>
             <input asp-for="Password" type="password" name="password" class="password" required>
             <a href="#"><p class="remember-password">@localizer["Remind password"]</p></a>
             <button type="submit" class="button_log_in" style="color:#FFFFFF; margin-top: 10px; margin-bottom: 20px; font-size: 20px; line-height: 30px; font-family: Literata; ">@localizer["Login"]</button>
             <a asp-controller="Authentication" asp-action="Registration"><p class="log_in-text">@localizer["Register"]</p></a>
             <hr class="hr1">
             <p class="user-text">
                 @localizer["Log in as a user"]
             </p>
             <div style="width: 443px; height: 98px; ">
                    <div class="g-signin2" style="margin-left: 36%;" data-onsuccess="onSignIn"></div>
             </div>
         </div>
     </form>
 </div>

