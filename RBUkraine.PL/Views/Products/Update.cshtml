@model RBUkraine.PL.ViewModels.Products.ProductEditorViewModel

@{
    ViewData["Title"] = "Update";
}

<div style=" height: 700px; background-image: url(../images/3.jpg);">
    <br><br>
    <div class="admin_animal_block" style="height: 600px; width: 1200px">
        <div style="height: 10px"></div>
        <a asp-controller="Products" asp-action="GetAllAdmin" class="text-Literata" style="margin-left: 20px; font-size: 18px">&#10094;&emsp;@localizer["Products"]</a>
        <hr style="margin-top: 10px">
        <div class="row" style="margin-top: 10px; width: 1000px; height: 500px; margin-left: auto; margin-right: auto; border-radius: 15px; background-color: #F6F6E9">
            <div style="width: 220px; height: 500px;  border-bottom-left-radius: 15px; border-top-left-radius:15px; background-color: #E2E9DE">
                <div style="width: 160px; margin-left: auto; margin-right: auto; margin-top: 30px">
                    <p class="Arial" style="font-size: 18px">@localizer["Name"]:</p>
                    <hr style="margin-top: -10px;">
                    <p class="Arial" style="margin-top: -10px;font-size: 18px">@localizer["Category"]:</p>
                    <hr style="margin-top: -10px;">
                    <p class="Arial" style="margin-top: -10px;font-size: 18px">@localizer["Price"]:</p>
                    <hr style="margin-top: -10px;">
                    <p class="Arial" style="margin-top: -10px;font-size: 18px">@localizer["Photo"]:</p>
                    <hr style="margin-top: -10px;">
                    <p class="Arial" style="margin-top: -10px;font-size: 18px">@localizer["Description"]:</p>

                </div>
            </div>
            <div style="font-family:Montserrat; width: 750px; height: 500px; margin-top: 23px; margin-left: auto; margin-right: auto;">
                <form style="margin-left:1%; margin-top: 1%;" asp-action="Update" enctype="multipart/form-data">
                    <input asp-for="Name" type="text" style="width: 100%; height: 35px; border-color: #d0d0d0; border-style: solid; border-width: 1px" value="@Model.Name">
                    <input asp-for="Category" type="text" style="margin-top: 5px; margin-bottom: 5px; width: 100%; height: 35px; border-color: #d0d0d0; border-style: solid; border-width: 1px" value="@Model.Category">
                    <input asp-for="Price" type="number" step="1" min="0" style="width: 150px; height: 35px; border-color: #d0d0d0; border-style: solid; border-width: 1px;margin-top: -15px" value="@Model.Price"><span style="font-size:  20px; ">&#8372;</span>
                    <div class="col-sm-12 custom-file" style="margin-top:1%;">
                        <input type="file" asp-for="File" multiple="multiple" />
                        <span asp-validation-for="File" class="text-danger"></span>
                    </div>
                    <textarea asp-for="Description" style=" width: 100%; height: 260px; max-height: 260px; min-height: 260px; text-align: start; border-color: #d0d0d0; border-style: solid; border-width: 1px">@Model.Description</textarea>
                    <button>
                        <img src="~/icons/save.png" style="width: 33.33px; height: 33.33px;" />
                    </button>

                </form>
            </div>
        </div>

    </div>


    <br><br>
</div>