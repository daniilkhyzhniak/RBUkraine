@model RBUkraine.PL.ViewModels.Products.ProductViewModel

@{
    ViewData["Title"] = "GetById";
}

<div style="background-image: url(../images/4.jpg); ">
    <div style="height: 60px;"></div>
    <div class="row">
        <div>
            <a asp-controller="Donation" asp-action="Donate">
                <button class="left-button">
                    <br><br>@localizer["Make a charitable"]<br> @localizer["contribution"]
                </button>
            </a>
        </div>
        <br><br>
        <div class="admin_animal_block" style=" width: 1200px;">
            <div style="height: 10px"></div>
            <a asp-controller="Products" asp-action="GetAll" class="text-Literata" style="margin-left: 20px; font-size: 20px">&#10094;&emsp;@localizer["Store"]</a>
            <hr style="margin-top: 10px">
            <div class="row">
                <div style="margin-left: 35px;">
                    <p><img src=@Model.Image.Url alt="1" height="300px" width="300px"></p>
                </div>

                <div style="height: 280px; width: 450px; margin-left: 20px; margin-top: 20px; ">
                    <div style="height: 230px;">
                        <p class="text-Montserrat" style="color: #484848; font-size: large;">@Model.Name</p>
                        <p class="text-Montserrat-light" style="color: #636363; font-size: large; margin-left: 7px;">@localizer["Category"]: &emsp;<span class="text-Literata">@Model.Category</span></p>
                    </div>
                    <a onclick="addToCart('@Model.Id', '@localizer["Product added to cart"]')">
                        <button style="height: 40px; width: 430px; border-style: solid; border-color: #D2C29D; background: #D2C29D; border-radius: 5px; color: white; font-family: Montserrat; font-style: normal; font-weight: 500; font-size: 18px; ">@localizer["Add item to cart"]</button>
                    </a>
                </div>

                <div style="width: 360px; margin-left:20px; height: 300px;  ">
                    <div class="center_content" style="height: 255px; ">
                        <p class="red_Literata" style="font-size: 70px;">@Model.Price.ToString("f0") ₴</p>
                    </div>
                    <button style="height: 40px; width: 360px; border-style: solid; border-color: #D2C29D; background: #D2C29D; border-radius: 5px; color: white; font-family: Montserrat; font-style: normal; font-weight: 500; font-size: 18px; ">Купити зараз</button>
                </div>
            </div>
            <div style=" width: 1130px; margin-left: 20px;">
                <p class="text-Montserrat" style="font-size: 18px; color: #484848; margin-left: 15px;">@localizer["Description"]:</p>
                <p class="text-Literata">
                    @Model.Description
                </p>
                <br>
            </div>
        </div>




    </div>
    <br><br>
</div>


@section Scripts
{
    <script src="~/scripts/add-to-cart.js"></script>
}

