<!DOCTYPE html>
<html>
<head>
    <title>RBUkraine</title>
    <link rel="icon" type="image/x-icon" href="images/favicon.png">
</head>
<body>
    <nav>
        @if (!User.Identity.IsAuthenticated)
        {
            <a asp-controller="Authentication" asp-action="Login">@localizer["Login"]</a>
        }
        else
        {
            <div>
                <form method="post" asp-controller="Authentication" asp-action="Logout">
                    <input type="submit" value="@localizer["Logout"]">
                </form>
            </div>
        }
        @{
            var requestCulture = Context.Features.Get<IRequestCultureFeature>();
            var cultureSelectList = new SelectList(new List<SelectListItem>
            {
                new("Укр", Culture.Ukrainian),
                new("Eng", Culture.English),
            }, "Value", "Text");
        }
        <div>
            <form asp-controller="Culture"
                  asp-action="SetCulture"
                  method="post">
                <select name="culture"
                        onchange="this.form.submit();"
                        for="culture"
                        asp-for="@requestCulture.RequestCulture.UICulture.Name" 
                        asp-items="cultureSelectList">
                </select>
            </form>
        </div>
    </nav>

@RenderBody()

<script type="text/javascript" src="https://js.stripe.com/v3/"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>