@model RBUkraine.PL.ViewModels.News.NewsEditorViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="editor-block">
    <br><br>
    <div class="admin_animal_block" style="height: 700px; width: 1200px">
        <div style="height: 10px"></div>
        <a href="#" class="text-Literata" style="margin-left: 20px; font-size: 18px">&#10094;&emsp;@localizer["New"]</a>
        <hr style="margin-top: 10px">
        <div class="row" style="margin-top: 10px; width: 1000px; height: 600px; margin-left: auto; margin-right: auto; border-radius: 15px; background-color: #F6F6E9">
            <div style="width: 220px; height: 600px;  border-bottom-left-radius: 15px; border-top-left-radius:15px; background-color: #E2E9DE">
                <div style="width: 160px; margin-left: auto; margin-right: auto; margin-top: 30px">
                    <p class="Arial" style="font-size: 18px">@localizer["Name"]:</p>
                    <hr style="margin-top: -10px;">
                    <p class="Arial" style="margin-top: -10px;font-size: 18px">@localizer["Subject"]:</p>
                    <hr style="margin-top: -10px;">
                    <p class="Arial" style="margin-top: -10px;font-size: 18px">@localizer["Date"]:</p>
                    <hr style="margin-top: -10px;">
                    <p class="Arial" style="margin-top: -10px;font-size: 18px">@localizer["Brief description"]:</p>
                    <hr style="margin-top: 70px;">
                    <p class="Arial" style="margin-top: -10px;font-size: 18px">@localizer["Full description"]:</p>

                </div>
            </div>
            <div style="font-family:Montserrat; width: 750px; height: 500px; margin-top: 23px; margin-left: auto; margin-right: auto;">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="Title" type="text" style="width: 100%; height: 35px; border-color: #d0d0d0; border-style: solid; border-width: 1px" value="">
                    <div class="row">
                        <p>
                            <select style="margin-bottom:-20px; margin-left: 15px; width: 400px; margin-top: 5px; height: 35px; border-color: #d0d0d0; border-style: solid; border-width: 1px">
                                <option>БФ “Захист тварин Червоної книги України”</option>
                            </select>
                        </p>
                        <label class="text-Montserrat" style="font-size: 15px; margin-top: 15px">
                            &emsp; <input type="checkbox" value="cf1">&nbsp;Від БФ&ensp;&emsp;
                            <input type="checkbox" value="cf1">&nbsp;Від виду&ensp;&emsp;
                            <input type="checkbox" value="cf1">&nbsp;Від нас
                        </label>
                    </div>
                    <input asp-for="PublishDate" type="date" style="margin-top: -30px; height: 35px; border-color: #d0d0d0; border-style: solid; border-width: 1px">
                    <textarea asp-for="ShortDescription" style="margin-top: 5px; margin-bottom: -5px; width: 100%; height: 100px; max-height: 100px; min-height: 100px; text-align: start; border-color: #d0d0d0; border-style: solid; border-width: 1px"></textarea>

                    <textarea asp-for="FullDescription" style="margin-top: 4px; width: 100%; height: 220px; max-height: 220px; min-height: 290px; text-align: start; border-color: #d0d0d0; border-style: solid; border-width: 1px"></textarea>

                    <button>
                        <img src="~/icons/save.png" style="width: 33.33px; height: 33.33px;" />
                    </button>

                </form>


            </div>
        </div>

    </div>


    <br><br>
</div>


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/scripts/edit-new.js"></script>
}


