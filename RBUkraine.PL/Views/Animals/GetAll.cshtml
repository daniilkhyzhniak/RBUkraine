@model IEnumerable<RBUkraine.PL.ViewModels.Animals.AnimalViewModel>

@{
    ViewData["Title"] = "GetAll";
}

<h1>GetAll</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Species)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Species)
            </td>
            <td>
                <img src="@item.Image.Url" alt="@item.Image.Title" width="300" />
            </td>
            <td>
                <a asp-action="Update" asp-route-id="@item.Id">Edit</a>
                <a asp-action="GetById" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
