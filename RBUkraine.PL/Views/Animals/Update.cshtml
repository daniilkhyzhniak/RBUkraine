                <form style="margin-left:1%; margin-top: 1%;" asp-action="Update" enctype="multipart/form-data">
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <input asp-for="Species" type="text" class="form-control" id="species" placeholder="" style="width: 550px;">
                        </div>
                    </div>
                    <div class="form-group row">

                        <div class="col-sm-12">
                            <input asp-for="LatinSpecies" type="text" class="form-control" id="latinSpecies" placeholder="">
                        </div>
                    </div>
                    <div class="form-group row">

                        <div class="col-sm-5" style="margin-top:3%;">
                            <select asp-for="ConservationStatus" id="conservationStatus" class="col-sm-10">
                                <option value="ex">EX</option>
                                <option value="ew">EW</option>
                                <option value="cr">CR</option>
                                <option value="en">EN</option>
                                <option value="vu">VU</option>
                                <option value="nt">NT</option>
                                <option value="lc">LC</option>
                            </select>
                        </div>
                        <div class="col-sm-5" style="margin-top:-4%;">
                            <img src="~/images/6.png" alt="1" width="290px" />
                        </div>
                    </div>
                    <div class="form-group row" style="margin-top:-2%;">
                        <div class="col-sm-12">
                            <input asp-for="Population" type="number" class="form-control" id="input4" placeholder="">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <input asp-for="Kingdom" type="text" class="form-control" id="input4" placeholder="">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <input asp-for="Phylum" type="text" class="form-control" id="input4" placeholder="">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-12" style="margin-top:1%;">
                            <input asp-for="Class" type="text" class="form-control" id="input4" placeholder="">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <input asp-for="Family" type="text" class="form-control" id="input4" placeholder="">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-12" style="margin-top: 1%;">
                            <input asp-for="Genus" type="text" class="form-control" id="input4" placeholder="">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-12" style="margin-top: 1%;">
                            <select asp-for="CharitableOrganizationId" class="col-sm-12 form-control">
                                @foreach (var item in Model.CharitableOrganizations)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-12" style="margin-top:1%;">
                            <input asp-for="Description" type="text" class="form-control" id="input4" placeholder="">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-12 custom-file" style="margin-top:1%;">
                            <input type="file" asp-for="Files" multiple="multiple" />
                            <span asp-validation-for="Files" class="text-danger"></span>
                        </div>
                    </div>
                    <button>
                        <img src="~/icons/save.png" style="width: 33.33px; height: 33.33px;" />
                    </button>
                </form>

